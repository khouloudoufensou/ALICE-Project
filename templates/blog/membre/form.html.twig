{% extends "base.html.twig" %}

{% block title %}
    {{ new ? 'Nouvel article' : article.title }}
{% endblock %}

{% block body %}

<div class="container">
  <div class="bg-light border border-success margin-left:50px;">
    <a href="{{ path('membre_blog_list') }}"><-- Retour</a>

    <div class="container">
        <img src="{{ asset(article.imagePath) }}" alt="" style="width: 200px;">
    </div>


    {% if new %}
        <h1>Cr√©er un nouvel article:</h1>
    {% else %}
        <h1>Modifier un article:</h1>
        <div class="lead">{{ article.title }}</div>
    {% endif %}

    <div class="container">     
         {{ form_start(form) }}
            
             <div class="mt-3">
                {{ form_row(form.title) }}
            </div>

             <div class="mt-3">
                {{ form_row(form.author) }}
            </div>

            <div class="mt-3">
                {{ form_row(form.content) }}
            </div>

             <div class="mt-3">
                {{ form_row(form.image) }}
            </div>

            <div class="mt-3">
                {{ form_row(form.submit) }}
            </div>

          {{ form_end(form) }}
    </div>
       
  <br>

    <div class="container">  
    {% if not new %}
            <a href="{{ path('membre_blog_remove', {id: article.id}) }}" class="btn btn-danger">Supprimer l'article</a>
            <br><br>
    {% endif %}
     <div class="container">
  </div>
</div>

{% endblock %}